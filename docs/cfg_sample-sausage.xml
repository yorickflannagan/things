<?xml version="1.0" encoding="UTF-8"?>
<!--
	Requer expostadas as variáveis de ambiente:
		EXECUTION_DIR: localização dos pacotes dependentes
		CONFIG_LOCATION: localização dos arquivos de configuração das seções
 -->
<!DOCTYPE config [
	<!ENTITY SNMP-CONF SYSTEM "${ENV.CONFIG_LOCATION}/snmp.conf" >
	<!ENTITY MQ-CONF   SYSTEM "${ENV.CONFIG_LOCATION}/mqseries.conf" >
	<!ENTITY MQ-CTX    SYSTEM "${ENV.CONFIG_LOCATION}/mqseries.context" >
]>
<config>
	<jvm>
		<jmx host="10.0.2.15" port="5051" />
		<classpath>
			<path>${ENV.EXECUTION_DIR}/things.jar</path>
			<path>${ENV.EXECUTION_DIR}/mqx.jar</path>
			<path>${ENV.EXECUTION_DIR}/mqx-batch_demo.jar</path>
			<path>${ENV.EXECUTION_DIR}/commons-digester.jar</path>
			<path>${ENV.EXECUTION_DIR}/snmp4j.jar</path>
		</classpath>
		<properties>
			<property name="java.library.path" value="${ENV.EXECUTION_DIR}" />
			<property name="java.util.logging.config.file" value="${ENV.CONFIG_LOCATION}/logging-sausage.properties" />
		</properties>
	</jvm>

	<jndi implementation="org.crypthing.things.appservice.ServicesFactory" />
	<worker implementation="br.gov.caixa.mqx.test.StuffSausage">
		<threads>10</threads>
		<restartable>true</restartable>
		<sleep>2000</sleep>
	</worker>

	<sandbox>
		<property name="max-put" value="2000" />
	</sandbox>

	&SNMP-CONF;	<!-- Declaração da configuração SNMP -->
	&MQ-CONF;	<!-- Declaração da configuração MQSeries -->

</config>
